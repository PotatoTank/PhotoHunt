<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ubc.dank.photohunt.CameraTextureView
        android:id="@+id/camera_preview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/launch_camera_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/ic_photo_camera" />
        <Button
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:id="@+id/check_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:foreground="@drawable/ic_check_black_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/tag_textview"
            android:layout_margin="16dp"
            android:layout_toEndOf="@id/launch_camera_button"
            android:layout_toStartOf="@id/check_button"
            android:textSize="30sp"
            android:text="test tag"
            android:textColor="@android:color/black"/>
    </RelativeLayout>
</LinearLayout>